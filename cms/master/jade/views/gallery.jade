.row-masonry.row-masonry-md-4.row-masonry-sm-2
	.col-masonry(ng-repeat="img in images", ng-class="{'btn btn-warning':img.capa, 'btn btn-default' : !img.capa}")
		.form-group
			span.btn.btn-danger(ng-click="excluir(img)")
				i.fa.fa-trash
			span.btn.btn-default(ng-href="", ng-click="capa(img)", ng-class="{'btn btn-success':img.capa}")
				i.icon-note
				| capa
		.grid-item(data-src="{{img.url}}", data-sub-html="{{'#subhtml'+$index}}")
			img.img-thumbnail.img-responsive(ng-src="{{img.thumbnail}}")
			div(style="display:none;", id="{{'subhtml'+$index}}")
				.customHtml
					span
						a(ng-href="{{img.url}}", target="_blank") {{img.url}}